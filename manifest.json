{
    "manifest_version": 3,
    "name":"Youtube Video Summariser",
    "description":"This is an Chrome Extension To generate Transcript or a Summary of a given Youtube Video",
    "version":"1.0",
    "permissions":["activeTab","declarativeContent"],
    "host_permissions":["http://127.0.0.1:5000/*"],
    "action":{
        "default_title":"Summarise NOW",
        "default_icon": {
            "16":"icon.png",
            "32":"icon.png",
            "48":"icon.png",
            "128":"icon.png"
        },
        "default_popup":"index.html"
    },
    "icons":{
        "16":"icon.png",
        "32":"icon.png",
        "48":"icon.png",
        "128":"icon.png"
    }
}